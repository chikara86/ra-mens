  <div class = "container">
      <div class = "offset-md-4">
              <% if ramen.ramen_comments.present? %>
                <% ramen.ramen_comments.each do |ramen_comment| %>

                  <div class = "row mt-5">
                    <%= ramen_comment.user.name %>
                  </div>

                  <div class = "row mt-1">
                  <%= ramen_comment.comment %>


                    <%= link_to "削除", admin_ramen_comment_path(ramen_comment.ramen,ramen_comment), method: :delete, class: "btn btn-sm btn-danger p-0 p-1", style: "font-size: 8px;" %>

                  </div>

                <% end %>

              <% else %>
                  <div class ="row mt-5">コメントはまだありません</div>
              <% end %>


    </div>
  </div>