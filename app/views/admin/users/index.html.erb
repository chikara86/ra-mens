<%= search_form_for @user, url: admin_users_path do |f| %>
  <div class = "text-right mr-5 mt-3" >
    <div class = 'nav-up'>

      <%= f.text_field :name_cont, placeholder: "名前から探す", class: "input-box" %>
      <button class="search-button">
        <i class="fas fa-search"></i>
      </button>
    </div>
<% end %>

<div class="container">
  <div class="row mb-3">
    <h2>
      <strong>
        会員一覧
      </strong>
    </h2>
  </div>
  <% if @results.length == 0 %>
      検索結果がありません。
  <% end %>
  <table class="table">
  <thead class="bg-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
    </tr>
    <tbody>
      <% @results.each do |user| %>
        <tr>
          <td><%= user.id %></td>

          <td class="text-black">
            <%= link_to user_path(user.id) do %>
            <%= user.name %>
            <% end %>
          </td>

          <td><%= user.email %></td>
          <td>
            <% if admin_signed_in? %>
                 <div class="mt-3">
                    <%= link_to "退会",admin_user_path(user), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
                 </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>