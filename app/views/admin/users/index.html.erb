<div class="container">
  <div class="row mb-3">
    <h2>
      <strong>
        会員一覧
      </strong>
    </h2>
  </div>
  <table class="table">
  <thead class="bg-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
    </tr>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>

          <td class="text-black">
            <%= link_to user_path(user.id) do %>
            <%= user.name %>
            <% end %>
          </td>

          <td><%= user.email %></td>
          <td>
            <% if admin_signed_in? %>
                 <div class="mt-3">
                    <%= link_to "退会",admin_user_path(user), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
                 </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>