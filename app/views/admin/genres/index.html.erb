<div class="container">
  <div class="row mt-3">
    <div class="col-4">
        <h3 class="bg-light">
          <strong>
            ジャンル一覧・追加
          </strong>
        </h3>
    </div>
  </div>

  <div class="row mt-5 ml-4">
      <tr>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <td>
            <strong>ジャンル名</strong>
          </td>
          <td><%= f.text_field :name, class: "ml-5" %></td>
          <td><%= f.submit '新規投録', class: "btn btn-sm btn-success ml-5" %></td>
        <% end %>
      </tr>
  </div>

  <div class="row mt-3">
    <div class="col-4">
      <table  class = "table">

          <tr class= "bg-light">
            <td>
              <strong>ジャンル</strong>
            </td>
            <td></td>
          </tr>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
          <td><%= genre.name %></td>
          <td class="text-right"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>